@import 'util'
.user
    &-profile-wrapper,
    &-message-wrapper
        float: left
        width: 50%

    &-message-wrapper
        box-shadow: 3px 0px 2px 0 rgba(0, 0, 0, .2) inset

    &-profile-wrapper
        box-shadow: 0 4px 10px rgba(0, 0, 0, .5)

    &-profile-header
        background: url('/images/profile-bg.jpg') center bottom no-repeat
        background-size: cover;
        padding: 120px 0 20px 30px

    &-profile-header-name,
    &-profile-header-tags-container
        display: inline-block
        vertical-align: top

    &-profile-header-name
        white-space: nowrap;
        margin-right: 50px
        overflow: hidden;
        line-height: 43px
        font-size(20px)
        width: 240px
        text-align: left
        color: #fff
        opacity .7
        border-bottom: 1px solid #fff
        &:focus
            opacity 1
            outline: none
            border-bottom: 1px solid #fff

    &-profile-header-tags-input
        height: 45px
        padding: 5px 15px
        border: none
        width: 350px
        &:focus
            outline: none
            box-shadow: 0 1px 1px rgba(0, 0, 0, .3) inset

    &-profile-info-interests-container
        ul
            margin-left: -5px
            padding: 0 0 0 30px
            list-style-type: none
        li
            float: left;
            color: #fff;
            padding: 10px 40px;
            margin: 2px;
            background-color: #77a139;
            display: block;

    &-profile-about-wrapper
        margin-top: 15px
        padding: 0 25px
        textarea
            resize: none
            width: 100%
            background-color: #f4f4f4
            border: none
            margin: 0
            padding: 12px 15px
            height: 80px
            &:focus
                outline: none
                box-shadow: 0 1px 1px rgba(0, 0, 0, .3) inset

    &-profile-eat-wrapper
        float: left
        width: 100%
        margin-top: 20px
        padding-left: 25px

    &-profile-eat-one
        display: inline-block
        width: 32%
        text-align: center
        padding-top: 68px
        &.morning
            background: url('/images/morning.png') no-repeat center top
        &.afternoon
            background: url('/images/afternoon.png') no-repeat center top
        &.evening
            background: url('/images/evening.png') no-repeat center top

        input[type="time"]
            margin-top: 10px
            padding-left: 8px
            text-align: center
            border: none
            &:focus
                outline: none
            &::-webkit-clear-button,
            &::-webkit-inner-spin-button,
            &::-webkit-datetime-edit-ampm-field
                display: none;

        input[disabled]
            display: inline-block
            opacity: .5

    &-profile-eat-budget-input
        min-width: 20px
        max-width: 30px
        border: none
        display: inline-block
        background-color: transparent
        &:focus
            outline: none

    &-profile-eat-budget-wrapper
        margin-top: 20px
        display: inline-block
        padding: 10px
        color: #77a139
        background: #f4f4f4

    &-profile-eat-times
        padding-top: 20px

    &-profile-eat-container
        width: 50%
        float: left

    &-profile-budget
        float: left
        width: 50%

    &-message-wrapper
        background-color: #eeeeee


    &-list-one
        padding: 12px  0 12px 30px
        margin-left: 2px
        margin-right: 20px
        border-bottom: 1px solid #dbdbdb

    &-list-element-time-range-container,
    &-list-element-name,
    &-list-element-time-range-element
        display: inline-block

    &-list-element-name
        margin-right: 30px

    &-list-element-time-range-element
        font-size(13px)
        margin-right: 30px
        color: #acacac

    &-list-similar-tags
        margin-top: 10px

    &-list-similar-element
        margin-bottom: 4px
        padding: 5px 14px
        background-color: #dfdfdf
        display: inline-block
        color: #999999
        font-size(11px)
        &.similar
            background-color: #77a139
            color: #fff

    &-person-add
        height: 100px
        background-image: url('/images/user.png') left center no-repeat;
        margin-left: 25px
        padding-top: 20px
        padding-bottom: 20px
.user-map-wrapper
    position: fixed
    left: 50.4%
    top:0
    height: 400px
    width: 100%
.address
    color: #9d9d9d
#address_list
    margin-top: 20px
    .item

        padding:10px 0 10px 30px
        background: url('/images/marker.png') left center no-repeat
        margin:0 0 20px 25px


.user-list-one
    &:hover
        cursor: pointer
        background-color: #dfdfdf
.headermenu
    background: url('/images/logo.png') no-repeat center center
    background-size: auto 32px
    z-index 999999
    width: 100%
    position: fixed
    height: 60px
    background-color: #638f1f

.active-super
    background-color: #dfdfdf

.ovh
    padding-top: 400px
    height: 100%
    overflow-y: auto